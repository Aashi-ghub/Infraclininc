{
  "name": "backendbore",
  "version": "1.0.0",
  "description": "Infrastructure-grade geological logging backend",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "npm run start:dev",
    "start:dev": "set IS_OFFLINE=true && set AWS_ACCESS_KEY_ID=dummy-access-key && set AWS_SECRET_ACCESS_KEY=dummy-secret-key && set AWS_REGION=us-east-1 && serverless offline",
    "deploy": "serverless deploy",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "seed:organisations": "set IS_OFFLINE=true && ts-node scripts/seed-organisations.ts",
    "seed:users": "set IS_OFFLINE=true && ts-node scripts/seed-users.ts",
    "add-passwords": "set IS_OFFLINE=true && ts-node scripts/add-passwords.ts"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.370.0",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.1",
    "uuid": "^9.0.0",
    "winston": "^3.11.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@serverless/typescript": "^4.17.1",
    "@types/aws-lambda": "^8.10.130",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.4",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "dotenv": "^16.3.1",
    "esbuild": "^0.19.8",
    "jest": "^29.7.0",
    "serverless": "^3.38.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-esbuild": "^1.48.5",
    "serverless-offline": "^13.3.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  }
}
